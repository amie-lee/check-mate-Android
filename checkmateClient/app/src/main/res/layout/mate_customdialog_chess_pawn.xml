<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2C2C2C"
    android:layout_gravity="center"
    android:paddingHorizontal="50dp"
    android:paddingVertical="10dp">


    <LinearLayout
        android:id="@+id/mate_dialog_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/notosans"
            android:text="폰"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/notosans"
            android:text="잠금 해제"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/mate_dialog_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosans"
        android:gravity="center"
        android:text="[ 체크메이트 실행 ]"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mate_dialog_group_title" />

    <TextView
        android:id="@+id/mate_dialog_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/notosans"
        android:gravity="center"
        android:text="체크메이트에 오신 것을 환영합니다!"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mate_dialog_tv1" />


    <Button
        android:id="@+id/mate_dialog_btn_close"
        android:layout_width="80dp"
        android:layout_height="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mate_dialog_tv2"
        android:layout_marginTop="15dp"
        android:text="닫기"
        android:textSize="14dp"
        android:textAlignment="center"
        android:fontFamily="@font/notosans"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>